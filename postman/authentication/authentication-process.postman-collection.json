{
	"info": {
		"_postman_id": "2a31a33b-2b15-4e64-921d-6432db238fa7",
		"name": "Authentication Process",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "4439096",
